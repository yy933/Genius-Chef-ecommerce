<div class="container my-5 py-5">
  {{> message}}
  <div class="profile-container pt-5">
    {{> admin-console-tabs}}
    <div class="profile-contents ms-3 col-10" id="v-pills-tabContent">
      <div class="profile-section d-flex flex-column">
        {{!-- Orders Table --}}
        <div>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>
                  <div class="d-flex justify-content-center">
                    User ID
                    {{!-- Sort button --}}
                    <div class="sort-btn d-flex flex-column
                      justify-content-center ms-1">
                      <a
                        href="/admin/dashboard/users?page={{pagination.currentPage}}&&sortBy=id&sortDir=ASC&active={{active}}&recurringSub={{recurringSub}}"><i
                          class="fa-solid fa-sort-up fa-2xs"></i></a>
                      <a
                        href="/admin/dashboard/users?page={{pagination.currentPage}}&&sortBy=id&sortDir=DESC&active={{active}}&recurringSub={{recurringSub}}"><i
                          class="fa-solid fa-sort-down fa-2xs"></i></a>
                    </div>
                  </div>
                </th>
                <th>
                  <div class="d-flex justify-content-center">
                    Name
                    {{!-- Sort button --}}
                    <div class="sort-btn d-flex flex-column
                      justify-content-center ms-1">
                      <a
                        href="/admin/dashboard/users?page={{pagination.currentPage}}&&sortBy=name&sortDir=ASC&active={{active}}&recurringSub={{recurringSub}}"><i
                          class="fa-solid fa-sort-up fa-2xs"></i></a>
                      <a
                        href="/admin/dashboard/users?page={{pagination.currentPage}}&&sortBy=name&sortDir=DESC&active={{active}}&recurringSub={{recurringSub}}"><i
                          class="fa-solid fa-sort-down fa-2xs"></i></a>
                    </div>
                  </div>
                </th>
                <th>
                  <div class="d-flex justify-content-center">
                    Email
                    {{!-- Sort button --}}
                    <div class="sort-btn d-flex flex-column
                      justify-content-center ms-1">
                      <a
                        href="/admin/dashboard/users?page={{pagination.currentPage}}&&sortBy=email&sortDir=ASC&active={{active}}&recurringSub={{recurringSub}}"><i
                          class="fa-solid fa-sort-up fa-2xs"></i></a>
                      <a
                        href="/admin/dashboard/users?page={{pagination.currentPage}}&&sortBy=email&sortDir=DESC&active={{active}}&recurringSub={{recurringSub}}"><i
                          class="fa-solid fa-sort-down fa-2xs"></i></a>
                    </div>
                  </div>
                </th>
                <th>
                  <div class="d-flex justify-content-center">
                    Created At
                    {{!-- Sort button --}}
                    <div class="sort-btn d-flex flex-column
                      justify-content-center ms-1">
                      <a
                        href="/admin/dashboard/users?page={{pagination.currentPage}}&&sortBy=created_at&sortDir=ASC&active={{active}}&recurringSub={{recurringSub}}"><i
                          class="fa-solid fa-sort-up fa-2xs"></i></a>
                      <a
                        href="/admin/dashboard/users?page={{pagination.currentPage}}&&sortBy=created_at&sortDir=DESC&active={{active}}&recurringSub={{recurringSub}}"><i
                          class="fa-solid fa-sort-down fa-2xs"></i></a>
                    </div>
                  </div>
                </th>
                <th>
                  <div class="d-flex  justify-content-center">
                    Active
                    <div class="dropdown">
                      <button class="active-filter btn dropdown-toggle
                        w-100" type="button"
                        data-bs-toggle="dropdown" aria-expanded="false">
                      </button>
                      <ul class="dropdown-menu">
                        <li><a class="dropdown-item"
                            href="/admin/dashboard/users?page={{pagination.prev}}&sortBy={{sortBy}}&sortDir={{sortDir}}&active={{active}}&recurringSub={{recurringSub}}">All</a></li>
                        <li><a class="dropdown-item"
                            href="/admin/dashboard/users?page={{pagination.prev}}&sortBy={{sortBy}}&sortDir={{sortDir}}&active=true&recurringSub={{recurringSub}}">Yes</a></li>
                        <li><a class="dropdown-item"
                            href="/admin/dashboard/users?page={{pagination.prev}}&sortBy={{sortBy}}&sortDir={{sortDir}}&active=false&recurringSub={{recurringSub}}">No</a></li>
                      </ul>
                    </div>
                  </div>
                </th>
                <th>
                  <div class="d-flex justify-content-center">
                    Recurring Subscription
                    <div class="dropdown d-flex">
                      <button class="recurSub-filter btn dropdown-toggle
                        w-100" type="button"
                        data-bs-toggle="dropdown" aria-expanded="false">
                      </button>
                      <ul class="dropdown-menu">
                        <li><a class="dropdown-item"
                            href="/admin/dashboard/users?page={{pagination.prev}}&sortBy={{sortBy}}&sortDir={{sortDir}}&active={{active}}&recurringSub={{recurringSub}}">All</a></li>
                        <li><a class="dropdown-item"
                            href="/admin/dashboard/users?page={{pagination.prev}}&sortBy={{sortBy}}&sortDir={{sortDir}}&active={{active}}&recurringSub=true">Yes</a></li>
                        <li><a class="dropdown-item"
                            href="/admin/dashboard/users?page={{pagination.prev}}&sortBy={{sortBy}}&sortDir={{sortDir}}&active={{active}}&recurringSub=false">No</a></li>
                      </ul>
                    </div>
                  </div>
                </th>
              </tr>
            </thead>
            <tbody>
              <tr class="sort-filter-sm-screen">
                <td class="fs-5">
                  <strong>Sort By</strong>
                </td>
                <td class="d-flex">
                  <div class="d-flex justify-content-center w-50">
                    User ID
                    {{!-- Sort button --}}
                    <div class="sort-btn d-flex flex-column
                      justify-content-center ms-1">
                      <a
                        href="/admin/dashboard/users?page={{pagination.currentPage}}&&sortBy=id&sortDir=ASC&active={{active}}&recurringSub={{recurringSub}}"><i
                          class="fa-solid fa-sort-up fa-2xs"></i></a>
                      <a
                        href="/admin/dashboard/users?page={{pagination.currentPage}}&&sortBy=id&sortDir=DESC&active={{active}}&recurringSub={{recurringSub}}"><i
                          class="fa-solid fa-sort-down fa-2xs"></i></a>
                    </div>
                  </div>
                  <div class="d-flex justify-content-center w-50">
                    Name
                    {{!-- Sort button --}}
                    <div class="sort-btn d-flex flex-column
                      justify-content-center ms-1">
                      <a
                        href="/admin/dashboard/users?page={{pagination.currentPage}}&&sortBy=name&sortDir=ASC&active={{active}}&recurringSub={{recurringSub}}"><i
                          class="fa-solid fa-sort-up fa-2xs"></i></a>
                      <a
                        href="/admin/dashboard/users?page={{pagination.currentPage}}&&sortBy=name&sortDir=DESC&active={{active}}&recurringSub={{recurringSub}}"><i
                          class="fa-solid fa-sort-down fa-2xs"></i></a>
                    </div>
                  </div>
                </td>
                <td class="d-flex">
                  <div class="d-flex justify-content-center w-50">
                    Email
                    {{!-- Sort button --}}
                    <div class="sort-btn d-flex flex-column
                      justify-content-center ms-1">
                      <a
                        href="/admin/dashboard/users?page={{pagination.currentPage}}&&sortBy=email&sortDir=ASC&active={{active}}&recurringSub={{recurringSub}}"><i
                          class="fa-solid fa-sort-up fa-2xs"></i></a>
                      <a
                        href="/admin/dashboard/users?page={{pagination.currentPage}}&&sortBy=email&sortDir=DESC&active={{active}}&recurringSub={{recurringSub}}"><i
                          class="fa-solid fa-sort-down fa-2xs"></i></a>
                    </div>
                  </div>
                  <div class="d-flex justify-content-center w-50">
                    Created At
                    {{!-- Sort button --}}
                    <div class="sort-btn d-flex flex-column
                      justify-content-center ms-1">
                      <a
                        href="/admin/dashboard/users?page={{pagination.currentPage}}&&sortBy=created_at&sortDir=ASC&active={{active}}&recurringSub={{recurringSub}}"><i
                          class="fa-solid fa-sort-up fa-2xs"></i></a>
                      <a
                        href="/admin/dashboard/users?page={{pagination.currentPage}}&&sortBy=created_at&sortDir=DESC&active={{active}}&recurringSub={{recurringSub}}"><i
                          class="fa-solid fa-sort-down fa-2xs"></i></a>
                    </div>
                  </div>
                </td>
                <td class="fs-5">
                  <strong>Filter By</strong>
                </td>
                <td class="d-flex">
                  <div class="d-flex w-50 justify-content-center
                    align-items-center">
                    Active
                    <div class="dropdown">
                      <button class="active-filter btn dropdown-toggle
                        w-100" type="button"
                        data-bs-toggle="dropdown" aria-expanded="false">
                      </button>
                      <ul class="dropdown-menu">
                        <li><a class="dropdown-item"
                            href="/admin/dashboard/users?page={{pagination.prev}}&sortBy={{sortBy}}&sortDir={{sortDir}}&active={{active}}&recurringSub={{recurringSub}}">All</a></li>
                        <li><a class="dropdown-item"
                            href="/admin/dashboard/users?page={{pagination.prev}}&sortBy={{sortBy}}&sortDir={{sortDir}}&active=true&recurringSub={{recurringSub}}">Yes</a></li>
                        <li><a class="dropdown-item"
                            href="/admin/dashboard/users?page={{pagination.prev}}&sortBy={{sortBy}}&sortDir={{sortDir}}&active=false&recurringSub={{recurringSub}}">No</a></li>
                      </ul>
                    </div>
                  </div>
                  <div class="d-flex w-50 justify-content-center">
                    Recurring Subscription
                    <div class="dropdown d-flex">
                      <button class="recurSub-filter btn dropdown-toggle
                        w-100" type="button"
                        data-bs-toggle="dropdown" aria-expanded="false">
                      </button>
                      <ul class="dropdown-menu">
                        <li><a class="dropdown-item"
                            href="/admin/dashboard/users?page={{pagination.prev}}&sortBy={{sortBy}}&sortDir={{sortDir}}&active={{active}}&recurringSub={{recurringSub}}">All</a></li>
                        <li><a class="dropdown-item"
                            href="/admin/dashboard/users?page={{pagination.prev}}&sortBy={{sortBy}}&sortDir={{sortDir}}&active={{active}}&recurringSub=true">Yes</a></li>
                        <li><a class="dropdown-item"
                            href="/admin/dashboard/users?page={{pagination.prev}}&sortBy={{sortBy}}&sortDir={{sortDir}}&active={{active}}&recurringSub=false">No</a></li>
                      </ul>
                    </div>
                  </div>
                </td>
                <td>

                </td>
              </tr>
              {{#each user}}
              <tr>
                <td data-label="User ID">{{this.id}}</td>
                <td data-label="Name">{{this.name}}</td>
                <td data-label="Email">{{this.email}}</td>
                <td data-label="Created At">{{this.createdAt}}</td>
                <td data-label="Active">{{#is this.activeSub
                  true}}Yes{{else}}No{{/is}}</td>
                <td data-label="Recurring Subscription">{{#is
                  this.recurringSub
                  true}}Yes{{else}}No{{/is}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        {{!-- Pagination --}}
        <nav class="mt-3 nav-pagination" aria-label="page navigation">
          <ul class="pagination">
            <li class="page-item {{#is pagination.currentPage
              1}}disabled{{/is}}">
              <a class="page-link"
                href="/admin/dashboard/users?page={{pagination.prev}}&sortBy={{sortBy}}&sortDir={{sortDir}}&active={{active}}&recurringSub={{recurringSub}}"
                aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
            {{#each pagination.pages}}
            {{#is this ../pagination.currentPage}}
            <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
            {{else}}
            <li class="page-item">
              <a class="page-link"
                href="/admin/dashboard/users?page={{this}}&sortBy={{../sortBy}}&sortDir={{../sortDir}}&active={{active}}&recurringSub={{recurringSub}}">{{this}}</a>
            </li>
            {{/is}}
            {{/each}}
            <li class="page-item {{#is pagination.currentPage
              pagination.totalPage}}disabled{{/is}}">
              <a class="page-link"
                href="/admin/dashboard/users?page={{pagination.next}}&sortBy={{sortBy}}&sortDir={{sortDir}}&active={{active}}&recurringSub={{recurringSub}}"
                aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
