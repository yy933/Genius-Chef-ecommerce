<section id="forget-password">
    <div class="container py-5">
        <div class="row d-flex align-items-center justify-content-center">
            {{> message}}
            {{> login-image}}
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form class="needs-validation" action="/users/forgetPassword" method="post" novalidate>
                    {{> forget-password-input}}
                     <div class="align-items-center my-4">
                        <p class="text-center">Don't have an account? <a href="/users/signup" class="link-info">Create one</a></p>
                        <p class="text-center my-2"><a class="link-primary" href="/users/login">Login</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
</div>
