<div class="container my-5 py-5">
  {{> message}}
  <form class="needs-validation" action="/" method="post" novalidate>
    <div class="payment-container row d-flex py-3">
      <div class="col-12 col-md-6">
        {{!-- Current Plan info --}}
        <h4 class="scroll-title">Current Plan Details</h4>
        <div class="scroll-body">
          <ol class="my-3">
            <li><strong>Order number: </strong> #{{showId}}</li>
            <li><strong>Order at:</strong> {{orderAt}}</li>
            <li><strong>Menu:</strong> {{menu}}</li>
            <li><strong>Preference:</strong> {{preference}}</li>
            <li><strong>Servings:</strong> {{servings}}</li>
            <li><strong>Meals per week:</strong> {{meals}}</li>
            <li><strong>Total amount:</strong> $ {{totalAmount}}</li>
          </ol>
        </div>
        {{!-- Current Plan info --}}
        <h4 class="scroll-title">Delivery Details</h4>
        <div class="scroll-body">
          <ol class="my-3">
            <li><strong>Name: </strong> {{name}}</li>
            <li><strong>Email:</strong> {{email}}</li>
            <li><strong>Phone:</strong> {{phone}}</li>
            <li><strong>Address:</strong> {{address}}</li>
            <li><strong>Preferred Delivery Day:</strong> {{preferredDay}}</li>
            <li><strong>Preferred Delivery Time:</strong> {{preferredTime}}</li>
          </ol>
        </div>
      </div>
      <div class="col-12 col-md-6">
        {{!-- Payment Details --}}
        <h4 class="scroll-title">Payment Details</h4>
        <div class="scroll-body">
          {{!-- Credit card details --}}
          <ol class="my-1">
            <li>
              <strong>Accepted Cards</strong>
              <div class="accepted-cards col-12 col-md-8">
                <img class="img-responsive"
                  src="https://cdn3.iconfinder.com/data/icons/payment-method-1/64/_Mastercard-512.png">
                <img class="img-responsive"
                  src="https://cdn4.iconfinder.com/data/icons/flat-brand-logo-2/512/visa-512.png">
                <img class="img-responsive"
                  src="https://cdn3.iconfinder.com/data/icons/payment-method-1/64/_JCB-512.png">
              </div>
            </li>
            <li class="my-2">
              <strong> <label for="cname"> Name on Card</label></strong>
              <input type="text" id="cname" name="cardname" required>
              <div class="invalid-feedback">Please provide a valid name.</div>
            </li>
            <li>

              <strong> <label for="ccnum">Credit Card Number</label></strong>
              <input type="text" id="ccnum" name="cardnumber"
                inputmode="numeric"
                pattern="^(?:4[0-9]{12}(?:[0-9]{3})?|^5[1-5][0-9]{14}$|^2(?:2(?:2[1-9]|[3-9][0-9])|[3-6][0-9][0-9]|7(?:[01][0-9]|20))[0-9]{12}$|(?:2131|1800|35\d{3})\d{11})$"
                maxlength="16" required>
              <div class="invalid-feedback">Please provide a valid number.</div>
            </li>
            <li class="my-2">
              <strong><label for="exp">Expiration (MM/YY) </label></strong>
              <input type="text" id="exp" name="exp" placeholder="MM/YY"
                pattern="^(0[1-9]|1[0-2])\/?([0-9]{2})$" maxlength="5"
                required>
              <div class="invalid-feedback">Please provide a valid
                expiration in format MM/YY.</div>
            </li>
            <li>
              <strong><label for="cvv">CVV</label></strong>
              <input type="password" id="cvv" name="cvv" inputmode="numeric"
                pattern="^\d{3}$" maxlength="3" required>
              <div class="invalid-feedback">Please provide a valid CVV.</div>
            </li>
          </ol>
        </div>
      </div>
      {{!-- Confirm buttons --}}
      <div class="continue-btn col-12 text-center my-2">
        <button class="btn btn-outline-success" type="submit">Confirm</button>
        <button class="btn btn-outline-secondary" type="reset">Reset</button>
      </div>
    </div>
  </form>
  <!-- Divider -->
  <div class="divider d-flex align-items-center mt-3">
    <p class="text-center fw-bold mx-3 mb-0 text-muted">Or Checkout with</p>
  </div>
  <!-- Third-Party Payment  -->
  <div class="d-flex justify-content-center text-center mt-2">
    <!-- PayPal Logo -->
    <table border="0" cellpadding="10" cellspacing="0" align="center"><tr><td
          align="center"></td></tr><tr><td align="center"><a
            href="https://www.paypal.com/c2/webapps/mpp/home?locale.x=en_C2"
            title="PayPal"
            onclick="javascript:window.open('https://www.paypal.com/c2/webapps/mpp/home?locale.x=en_C2','WIPaypal','toolbar=no,
            location=no, directories=no, status=no, menubar=no, scrollbars=yes,
            resizable=yes, width=1060, height=700'); return false;"><img
              src="https://www.paypalobjects.com/digitalassets/c/website/marketing/apac/C2/logos-buttons/optimize/44_Grey_PayPal_Pill_Button.png"
              alt="PayPal" /></a></td></tr></table>
    <!-- PayPal Logo -->
  </div>
</div>
